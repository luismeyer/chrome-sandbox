{
	"compilerOptions": {
		"outDir": "./dist",
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"strict": true,
		"target": "ES2020",
		"declaration": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "vitest.config.ts", "vitest.setup.ts"]
}
